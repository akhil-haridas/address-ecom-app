    <!-- SIDEBAR -->



    <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu'></i>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search..." name="search" aria-label="search" style="display: none;">
                    <button type="submit" style="background: none;" class=""><i class='bx bx-search'></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="">
                <!-- <i class='bx bxs-bell'></i> -->
                <span class=""></span>
            </a>
            <!-- <a href="#" class="profile">
                <img src="">
            </a> -->
        </nav>
        <!-- NAVBAR -->

        <!-- MAIN -->
        <main>
            <div class="head-title">
                <div class="left">
                    <h1>Customers</h1>
                    <ul class="breadcrumb">
                        <li>
                            <a href="/admin/customers">Customers</a>
                        </li>
                        <li><i class='bx bx-chevron-right'></i></li>
                        <li>
                            <a class="active" href="/admin/customers">Customer Management</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="table-data">
                <div class="order">
                    <nav style="overflow: hidden;">
                        <form action="" style="margin-left: 439px;margin-bottom: 18px;">
                            <div class="form-input">
                                <input type="search" placeholder="Search..." name="search" aria-label="search" autocomplete="off">
                                <button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
                            </div>
                        </form>
                    </nav>
                    <table class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr>
                                <th>No.</th>
                                <th></th>
                                <th>Name</th>
                                <th>Joined</th>
                                <th>Mobile</th>
                                <th>Status</th>
                                <th>About</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if(users.length > 0){
                                for(let i=0 ;i < users.length;i++){
                                    %>
                                <tr>
                                    <td>
                                        <p style="margin-top: 21px; font-weight: 600;">
                                            <%= i+1 %>
                                        </p>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <%if(users[i].image){%>
                                                <img src="/userimg/<%=users[i].image%>" alt="" style="width: 45px; height: 45px" class="rounded-circle" />
                                                <%}else{%>
                                                    <img src="https://mdbootstrap.com/img/new/avatars/8.jpg" alt="" style="width: 45px; height: 45px" class="rounded-circle" />

                                                    <%}%>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="ms-3">
                                                <p class="fw-bold mb-1" style="font-weight: 600;">
                                                    <%= users[i].name %>
                                                </p>
                                                <p class="text-muted mb-0">
                                                    <%= users[i].email %>
                                                </p>

                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <p class="fw-normal mb-1">
                                            <%= users[i].date %>
                                        </p>
                                        <!-- <p class="text-muted mb-0">Date and Time</p> -->
                                    </td>
                                    <td>+91
                                        <%= users[i].mobile %>
                                    </td>
                                    <td>
                                        <p>
                                            <% if(users[i].Active == 0){%>
                                                <a onclick="blockUser('<%= users[i]._id%>')"><span class="status process">Active</span></a>
                                                <%}else{%>
                                                    <a onclick="blockUser('<%= users[i]._id%>')"><span class="status" style="background: red;">Blocked</span></a>
                                                    <%}%>
                                        </p>
                                    </td>
                                    <td>
                                        <button style=" border: none; background: transparent;"><a href="/admin/customer?id=<%= users[i]._id %>" style="text-decoration: none;"><span class="status more">View</span></a></button>
                                    </td>
                                </tr>
                                <%
                        }
                    }else{
                        %>
                                    <tr>
                                        <td colspan="5">
                                            <p>Users Not Found</p>
                                        </td>
                                    </tr>
                                    <%
                    }
                    %>
                        </tbody>
                    </table>
                </div>
            </div>
        </main>
        <!-- MAIN -->
    </section>
    <script>
        function blockUser(userId) {
            Swal.fire({
                title: 'Are you sure?',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, Confirm!'
            }).then((result) => {
                if (result.isConfirmed) {
                    location.href = '/admin/blockUser?id=' + userId
                }
            })
        }
    </script>
    <%- include('../adminlayouts/adminfooter.ejs') %>